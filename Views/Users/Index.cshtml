@model IEnumerable<WhatsAppMvcComplete.Models.User>

@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1><i class="bi bi-people"></i> User Management</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Dashboard">Dashboard</a></li>
                <li class="breadcrumb-item active">Users</li>
            </ol>
        </nav>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-person-plus me-1"></i>Add User
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Stats -->
<div class="row g-3 mb-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-3 text-center">
                        <h2 class="mb-0 text-primary">@Model.Count()</h2>
                        <small class="text-muted">Total Users</small>
                    </div>
                    <div class="col-md-9">
                        <div class="d-flex gap-4 justify-content-end">
                            <div class="text-end">
                                <small class="text-muted">With WhatsApp</small>
                                <div class="h5 mb-0">@Model.Count(u => !string.IsNullOrEmpty(u.WhatsAppNumber))</div>
                            </div>
                            <div class="text-end">
                                <small class="text-muted">With Email</small>
                                <div class="h5 mb-0">@Model.Count(u => !string.IsNullOrEmpty(u.Email))</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Users Table -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span><i class="bi bi-list me-2"></i>All Users (@Model.Count())</span>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th><i class="bi bi-hash me-1"></i>ID</th>
                        <th><i class="bi bi-person me-1"></i>Name</th>
                        <th><i class="bi bi-phone me-1"></i>Phone</th>
                        <th><i class="bi bi-whatsapp me-1"></i>WhatsApp</th>
                        <th><i class="bi bi-envelope me-1"></i>Email</th>
                        <th><i class="bi bi-chat me-1"></i>Messages</th>
                        <th><i class="bi bi-calendar me-1"></i>Created</th>
                        <th><i class="bi bi-gear me-1"></i>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td><strong>#@user.Id</strong></td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary text-white rounded-circle me-2 d-flex align-items-center justify-content-center" 
                                         style="width: 32px; height: 32px; font-size: 0.875rem;">
                                        @user.Name.Substring(0, 1).ToUpper()
                                    </div>
                                    <strong>@user.Name</strong>
                                </div>
                            </td>
                            <td>
                                <a href="tel:@user.Phone" class="text-decoration-none">
                                    <i class="bi bi-phone text-muted me-1"></i>@user.Phone
                                </a>
                            </td>
                            <td>
                                @(string.IsNullOrEmpty(user.WhatsAppNumber) 
                                    ? "<span class='text-muted'>-</span>" 
                                    : $"<i class='bi bi-whatsapp text-success me-1'></i>{user.WhatsAppNumber}")
                            </td>
                            <td>
                                @(string.IsNullOrEmpty(user.Email) 
                                    ? "<span class='text-muted'>-</span>" 
                                    : $"<a href='mailto:{user.Email}' class='text-decoration-none'>{user.Email}</a>")
                            </td>
                            <td>
                                <span class="badge bg-secondary">@user.Messages.Count</span>
                            </td>
                            <td><small>@user.CreatedAt.ToString("MMM dd, yyyy")</small></td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-outline-primary" title="View">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-outline-secondary" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@user.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-outline-danger" title="Delete"
                                                onclick="return confirm('Are you sure you want to delete this user?')">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="8" class="text-center py-5">
                                <i class="bi bi-people text-muted" style="font-size: 3rem;"></i>
                                <p class="text-muted mt-3">No users found</p>
                                <a asp-action="Create" class="btn btn-primary">
                                    <i class="bi bi-person-plus me-1"></i>Add Your First User
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
