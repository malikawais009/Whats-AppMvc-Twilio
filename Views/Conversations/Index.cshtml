@model IEnumerable<WhatsAppMvcComplete.Models.Conversation>

@{
    ViewData["Title"] = "Conversations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h1><i class="bi bi-chat-dots"></i> Conversations</h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Dashboard">Dashboard</a></li>
            <li class="breadcrumb-item active">Conversations</li>
        </ol>
    </nav>
</div>

<!-- Quick Actions -->
<div class="row g-3 mb-4">
    <div class="col-md-3">
        <button type="button" class="quick-action-btn w-100" data-bs-toggle="modal" data-bs-target="#newChatModal">
            <i class="bi bi-plus-circle text-primary"></i>
            <span class="small">New Chat</span>
        </button>
    </div>
    <div class="col-md-3">
        <a href="/Messages/Compose" class="quick-action-btn text-decoration-none w-100">
            <i class="bi bi-send text-success"></i>
            <span class="small">Send Message</span>
        </a>
    </div>
    <div class="col-md-3">
        <a href="/Templates" class="quick-action-btn text-decoration-none w-100">
            <i class="bi bi-file-text text-info"></i>
            <span class="small">Templates</span>
        </a>
    </div>
    <div class="col-md-3">
        <a href="/Logs/InboundMessages" class="quick-action-btn text-decoration-none w-100">
            <i class="bi bi-arrow-down-left text-warning"></i>
            <span class="small">Inbound</span>
        </a>
    </div>
</div>

<!-- New Chat Modal -->
<div class="modal fade" id="newChatModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-chat-dots text-success me-2"></i>Start New Conversation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-controller="Conversations" asp-action="Start" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Phone Number</label>
                        <input type="text" name="phone" class="form-control" 
                               placeholder="+1234567890" required>
                        <small class="text-muted">Include country code without +</small>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Message</label>
                        <textarea name="message" class="form-control" rows="3" 
                                  placeholder="Type your message..." required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-send me-2"></i>Start Chat
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Conversations Table -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span><i class="bi bi-chat-dots me-2"></i>All Conversations (@Model.Count())</span>
        <span class="badge bg-success">@Model.Count(c => c.Messages.Any()) active</span>
    </div>
    <div class="card-body p-0">
        @if (!Model.Any())
        {
            <div class="p-4 text-center text-muted">
                <i class="bi bi-chat-dots fs-1"></i>
                <p class="mt-2">No conversations yet.</p>
                <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#newChatModal">
                    <i class="bi bi-plus me-2"></i>Start Your First Chat
                </button>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th><i class="bi bi-phone me-1"></i>Phone</th>
                            <th><i class="bi bi-clock me-1"></i>Last Activity</th>
                            <th><i class="bi bi-chat me-1"></i>Messages</th>
                            <th><i class="bi bi-gear me-1"></i>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var conversation in Model)
                        {
                            <tr class="conversation-item">
                                <td>
                                    <a href="@Url.Action("Chat", new { id = conversation.Id })" class="text-decoration-none">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-success bg-opacity-25 rounded-circle p-2 me-3">
                                                <i class="bi bi-whatsapp text-success fs-5"></i>
                                            </div>
                                            <div>
                                                <strong class="d-block">@conversation.PhoneNumber</strong>
                                                <small class="text-muted">
                                                    Last: @conversation.LastMessageAt.ToString("MMM dd, HH:mm")
                                                </small>
                                            </div>
                                        </div>
                                    </a>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-clock text-muted me-2"></i>
                                        <span>@conversation.LastMessageAt.ToString("yyyy-MM-dd HH:mm")</span>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@conversation.Messages.Count</span>
                                </td>
                                <td>
                                    <a href="@Url.Action("Chat", new { id = conversation.Id })" class="btn btn-sm btn-success">
                                        <i class="bi bi-chat me-1"></i>Open
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<style>
    .conversation-item td {
        vertical-align: middle;
    }
    
    .conversation-item:hover {
        background-color: rgba(37, 211, 102, 0.05) !important;
    }
    
    .quick-action-btn {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 1.25rem 1rem;
        border-radius: 12px;
        background: white;
        border: 1px solid #e0e0e0;
        cursor: pointer;
        transition: all 0.3s ease;
        height: 100%;
    }
    
    .quick-action-btn:hover {
        border-color: #25D366;
        box-shadow: 0 4px 12px rgba(37, 211, 102, 0.15);
    }
    
    .quick-action-btn i {
        font-size: 1.75rem;
        margin-bottom: 0.5rem;
    }
</style>
