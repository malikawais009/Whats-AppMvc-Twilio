@model IEnumerable<WhatsAppMvcComplete.Models.Template>

@{
    ViewData["Title"] = "Pending Approvals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h1>Pending Template Approvals</h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Dashboard">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/Templates">Templates</a></li>
            <li class="breadcrumb-item active">Pending Approvals</li>
        </ol>
    </nav>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span><i class="bi bi-clock text-warning"></i> Templates Awaiting Approval</span>
        <a href="/Templates" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left"></i> Back to Templates
        </a>
    </div>
    <div class="card-body p-0">
        @if (!Model.Any())
        {
            <div class="p-4 text-center text-muted">
                <i class="bi bi-check-circle fs-1 text-success"></i>
                <p class="mt-2">No templates pending approval.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Template Preview</th>
                            <th>Created By</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var template in Model)
                        {
                            <tr>
                                <td>@template.Id</td>
                                <td>@template.Name</td>
                                <td style="max-width: 300px;">
                                    <div class="text-truncate" title="@template.TemplateText">
                                        @template.TemplateText
                                    </div>
                                </td>
                                <td>@template.CreatedBy</td>
                                <td>@template.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>
                                    <a href="@Url.Action("Details", new { id = template.Id })" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                    <button type="button" class="btn btn-sm btn-success" data-bs-toggle="modal" data-bs-target="#approveModal-@template.Id">
                                        <i class="bi bi-check"></i> Approve
                                    </button>
                                    <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#rejectModal-@template.Id">
                                        <i class="bi bi-x"></i> Reject
                                    </button>
                                </td>
                            </tr>
                            
                            <!-- Approve Modal -->
                            <div class="modal fade" id="approveModal-@template.Id" tabindex="-1">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Approve Template</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>
                                        <form asp-action="Approve" method="post">
                                            <div class="modal-body">
                                                <input type="hidden" name="templateId" value="@template.Id" />
                                                <div class="mb-3">
                                                    <label class="form-label">Comments (optional)</label>
                                                    <textarea name="comments" class="form-control" rows="3" placeholder="Add any comments..."></textarea>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <button type="submit" class="btn btn-success">Approve</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Reject Modal -->
                            <div class="modal fade" id="rejectModal-@template.Id" tabindex="-1">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Reject Template</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>
                                        <form asp-action="Reject" method="post">
                                            <div class="modal-body">
                                                <input type="hidden" name="templateId" value="@template.Id" />
                                                <div class="mb-3">
                                                    <label class="form-label">Rejection Reason (required)</label>
                                                    <textarea name="reason" class="form-control" rows="3" required placeholder="Explain why this template is being rejected..."></textarea>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <button type="submit" class="btn btn-danger">Reject</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
