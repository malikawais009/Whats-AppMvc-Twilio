@model IEnumerable<WhatsAppMvcComplete.Models.Template>

@{
    ViewData["Title"] = "Pending Approval";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1><i class="bi bi-clock-history"></i> Pending Approval</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Dashboard">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="/Templates">Templates</a></li>
                <li class="breadcrumb-item active">Pending Approval</li>
            </ol>
        </nav>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (!Model.Any())
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="bi bi-check-circle text-success" style="font-size: 4rem;"></i>
            <h3 class="mt-3">All Clear!</h3>
            <p class="text-muted">No templates are pending approval.</p>
            <a asp-action="Index" class="btn btn-primary">
                <i class="bi bi-arrow-left me-2"></i>Back to Templates
            </a>
        </div>
    </div>
}
else
{
    <div class="row">
        @foreach (var template in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span><strong>@template.Name</strong></span>
                        <span class="badge bg-warning">Pending</span>
                    </div>
                    <div class="card-body">
                        <p class="card-text">@template.TemplateText</p>
                        <hr>
                        <div class="row small">
                            <div class="col-6">
                                <strong>Submitted:</strong><br>
                                @(template.SubmittedAt?.ToString("MMM dd, yyyy HH:mm") ?? template.CreatedAt.ToString("MMM dd, yyyy HH:mm"))
                            </div>
                            <div class="col-6">
                                <strong>Submitted By:</strong><br>
                                @(template.CreatedBy ?? "System")
                            </div>
                        </div>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <a asp-action="Details" asp-route-id="@template.Id" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-eye me-1"></i>View
                        </a>
                        <div class="btn-group">
                            <form asp-action="Approve" asp-route-templateId="@template.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-success btn-sm" onclick="return confirm('Are you sure you want to approve this template?');">
                                    <i class="bi bi-check-lg me-1"></i>Approve
                                </button>
                            </form>
                            <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#rejectModal_@template.Id">
                                <i class="bi bi-x-lg me-1"></i>Reject
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Reject Modal -->
            <div class="modal fade" id="rejectModal_@template.Id" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Reject Template: @template.Name</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <form asp-action="Reject" asp-route-templateId="@template.Id" method="post">
                            <div class="modal-body">
                                <div class="mb-3">
                                    <label class="form-label">Rejection Reason</label>
                                    <textarea name="reason" class="form-control" rows="3" required
                                              placeholder="Please provide a reason for rejection..."></textarea>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-danger">Reject Template</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}
