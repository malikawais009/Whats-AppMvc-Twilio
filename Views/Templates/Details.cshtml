@model WhatsAppMvcComplete.Models.Template

@{
    ViewData["Title"] = $"Template: {Model.Name}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h1>Template: @Model.Name</h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Dashboard">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/Templates">Templates</a></li>
            <li class="breadcrumb-item active">@Model.Name</li>
        </ol>
    </nav>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>Template Details</span>
                <div>
                    <span class="badge @(Model.Status == WhatsAppMvcComplete.Models.TemplateStatus.Approved ? "bg-success" : Model.Status == WhatsAppMvcComplete.Models.TemplateStatus.Rejected ? "bg-danger" : "bg-warning")">
                        @Model.Status
                    </span>
                    @if (!string.IsNullOrEmpty(Model.TwilioContentSid))
                    {
                        <span class="badge bg-info ms-1" title="@Model.TwilioContentSid">
                            <i class="bi bi-cloud-check"></i> On Twilio
                        </span>
                    }
                </div>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-3 fw-bold">ID:</div>
                    <div class="col-md-9">@Model.Id</div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-3 fw-bold">Name:</div>
                    <div class="col-md-9">@Model.Name</div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-3 fw-bold">Channel:</div>
                    <div class="col-md-9">@Model.Channel</div>
                </div>
                @if (!string.IsNullOrEmpty(Model.Language))
                {
                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold">Language:</div>
                        <div class="col-md-9">@Model.Language</div>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.Category))
                {
                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold">Category:</div>
                        <div class="col-md-9">@Model.Category</div>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.TwilioContentSid))
                {
                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold">Twilio ContentSid:</div>
                        <div class="col-md-9"><code>@Model.TwilioContentSid</code></div>
                    </div>
                }
                <div class="row mb-3">
                    <div class="col-md-3 fw-bold">Created:</div>
                    <div class="col-md-9">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-3 fw-bold">Created By:</div>
                    <div class="col-md-9">@Model.CreatedBy</div>
                </div>
                @if (Model.Status == WhatsAppMvcComplete.Models.TemplateStatus.Rejected)
                {
                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold">Rejection Reason:</div>
                        <div class="col-md-9 text-danger">@Model.RejectionReason</div>
                    </div>
                }
                
                <div class="mt-4">
                    <label class="form-label fw-bold">Template Text:</label>
                    <div class="p-3 bg-light border rounded">
                        @Model.TemplateText
                    </div>
                </div>
            </div>
        </div>

        @if (ViewBag.Requests != null && ((List<WhatsAppMvcComplete.Models.TemplateRequest>)ViewBag.Requests).Any())
        {
            <div class="card">
                <div class="card-header">Approval Requests</div>
                <div class="card-body p-0">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Requested By</th>
                                <th>Requested At</th>
                                <th>Status</th>
                                <th>Approved By</th>
                                <th>Comments</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var request in (List<WhatsAppMvcComplete.Models.TemplateRequest>)ViewBag.Requests)
                            {
                                <tr>
                                    <td>@request.RequestedBy</td>
                                    <td>@request.RequestedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td>
                                        <span class="badge @(request.Status == WhatsAppMvcComplete.Models.RequestStatus.Approved ? "bg-success" : request.Status == WhatsAppMvcComplete.Models.RequestStatus.Rejected ? "bg-danger" : "bg-warning")">
                                            @request.Status
                                        </span>
                                    </td>
                                    <td>@(request.ApprovedBy ?? "-")</td>
                                    <td>@request.Comments</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>

    <div class="col-md-4">
        <!-- Twilio Status Card -->
        <div class="card mb-4 border-info">
            <div class="card-header bg-info text-white">
                <i class="bi bi-cloud-check"></i> Twilio Status
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.TwilioContentSid))
                {
                    <div class="alert alert-success py-2 mb-2">
                        <small><i class="bi bi-check-circle"></i> Created on Twilio</small>
                    </div>
                    <div class="mb-2">
                        <small class="text-muted">ContentSid:</small><br>
                        <code class="small">@Model.TwilioContentSid</code>
                    </div>
                    <div class="mb-2">
                        <small class="text-muted">Status:</small><br>
                        <span class="badge @(Model.Status == WhatsAppMvcComplete.Models.TemplateStatus.Approved ? "bg-success" : "bg-warning")">
                            @(Model.Status == WhatsAppMvcComplete.Models.TemplateStatus.Approved ? "Approved by Meta" : "Pending Meta Approval")
                        </span>
                    </div>
                    <div class="d-flex gap-2 mt-3">
                        <form asp-action="SyncFromTwilio" asp-route-templateId="@Model.Id" method="post">
                            <button type="submit" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-arrow-repeat"></i> Sync Status
                            </button>
                        </form>
                        <a href="https://console.twilio.com/us1/develop/sms/content-template-builder" target="_blank" class="btn btn-outline-info btn-sm">
                            <i class="bi bi-box-arrow-up-right"></i> Twilio Console
                        </a>
                    </div>
                }
                else
                {
                    <div class="alert alert-secondary py-2 mb-0">
                        <small><i class="bi bi-clock"></i> Template not yet created on Twilio</small>
                    </div>
                }
            </div>
        </div>

        <!-- Actions Card -->
        <div class="card mb-4">
            <div class="card-header">Actions</div>
            <div class="card-body">
                @if (Model.Status == WhatsAppMvcComplete.Models.TemplateStatus.Approved)
                {
                    <a asp-controller="Messages" asp-action="Compose" class="btn btn-success w-100 mb-2">
                        <i class="bi bi-send"></i> Use This Template
                    </a>
                }
                @if (!string.IsNullOrEmpty(Model.TwilioContentSid))
                {
                    <a asp-controller="Messages" asp-action="Compose" asp-route-templateSid="@Model.TwilioContentSid" class="btn btn-outline-success w-100 mb-2">
                        <i class="bi bi-send"></i> Send with Twilio Template
                    </a>
                }
                @if (Model.Status == WhatsAppMvcComplete.Models.TemplateStatus.Draft)
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary w-100 mb-2">
                        <i class="bi bi-pencil"></i> Edit Template
                    </a>
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this template?');">
                        <button type="submit" class="btn btn-outline-danger w-100">
                            <i class="bi bi-trash"></i> Delete Template
                        </button>
                    </form>
                }
            </div>
        </div>

        <!-- Usage Statistics Card -->
        <div class="card">
            <div class="card-header">Usage Statistics</div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-2">
                    <span>Messages Sent:</span>
                    <strong>@Model.Messages.Count</strong>
                </div>
                <div class="d-flex justify-content-between">
                    <span>Success Rate:</span>
                    <strong>
                        @{
                            var delivered = Model.Messages.Count(m => m.Status == WhatsAppMvcComplete.Models.MessageStatus.Delivered);
                            var rate = Model.Messages.Any() ? (delivered * 100.0 / Model.Messages.Count).ToString("F1") : "0";
                        }
                        @rate%
                    </strong>
                </div>
            </div>
        </div>
    </div>
</div>
