@model IEnumerable<WhatsAppMvcComplete.Models.Template>

@{
    ViewData["Title"] = "Approved Templates";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h1>Approved WhatsApp Templates</h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Dashboard">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/Templates">Templates</a></li>
            <li class="breadcrumb-item active">Approved</li>
        </ol>
    </nav>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span><i class="bi bi-check-circle text-success"></i> Ready to Use</span>
        <a href="/Templates/Create" class="btn btn-primary btn-sm">
            <i class="bi bi-plus"></i> New Template
        </a>
    </div>
    <div class="card-body p-0">
        @if (!Model.Any())
        {
            <div class="p-4 text-center text-muted">
                <i class="bi bi-inbox fs-1"></i>
                <p class="mt-2">No approved templates yet. Create a new template to get started.</p>
                <a href="/Templates/Create" class="btn btn-primary">Create Template</a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Template Preview</th>
                            <th>Created By</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var template in Model)
                        {
                            <tr>
                                <td>@template.Id</td>
                                <td>
                                    <a href="@Url.Action("Details", new { id = template.Id })">
                                        @template.Name
                                    </a>
                                </td>
                                <td style="max-width: 400px;">
                                    <div class="text-truncate" title="@template.TemplateText">
                                        @template.TemplateText
                                    </div>
                                </td>
                                <td>@template.CreatedBy</td>
                                <td>@template.CreatedAt.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <a href="@Url.Action("Details", new { id = template.Id })" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                    <a href="/Messages/Compose?templateId=@template.Id" class="btn btn-sm btn-success">
                                        <i class="bi bi-send"></i> Use
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
