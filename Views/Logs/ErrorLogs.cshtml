@model IEnumerable<WhatsAppMvcComplete.Models.MessageLog>

@{
    ViewData["Title"] = "Error Logs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h1>Error Logs</h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Dashboard">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/Logs">Logs</a></li>
            <li class="breadcrumb-item active">Errors</li>
        </ol>
    </nav>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span><i class="bi bi-exclamation-triangle text-danger"></i> Failed Messages & Errors</span>
        <a href="@Url.Action("Index", "Logs")" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left"></i> Back to Logs
        </a>
    </div>
    <div class="card-body p-0">
        @if (!Model.Any())
        {
            <div class="p-4 text-center text-muted">
                <i class="bi bi-check-circle fs-1 text-success"></i>
                <p class="mt-2">No error logs found. All messages are successful!</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Message ID</th>
                            <th>Event Type</th>
                            <th>Timestamp</th>
                            <th>Error Details</th>
                            <th>User</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var log in Model)
                        {
                            <tr class="@(log.EventType == WhatsAppMvcComplete.Models.EventType.Failed ? "table-danger" : "")">
                                <td>@log.Id</td>
                                <td>
                                    <a href="@Url.Action("MessageLogs", "Logs", new { messageId = log.MessageId })">
                                        #@log.MessageId
                                    </a>
                                </td>
                                <td>
                                    <span class="badge bg-danger">@log.EventType</span>
                                </td>
                                <td>@log.EventTimestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(log.ErrorMessage))
                                    {
                                        <span class="text-danger">@log.ErrorMessage</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (log.Message?.User != null)
                                    {
                                        <a href="@Url.Action("Details", "Users", new { id = log.Message.User.Id })">
                                            @log.Message.User.Name
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
