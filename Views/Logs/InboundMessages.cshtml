@model IEnumerable<WhatsAppMvcComplete.Models.Message>

@{
    ViewData["Title"] = "Inbound Messages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h1>Inbound Messages</h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Dashboard">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/Logs">Logs</a></li>
            <li class="breadcrumb-item active">Inbound Messages</li>
        </ol>
    </nav>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>User Replies via WhatsApp</span>
        <a href="@Url.Action("Index", "Logs")" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left"></i> Back to Logs
        </a>
    </div>
    <div class="card-body p-0">
        @if (!Model.Any())
        {
            <div class="p-4 text-center text-muted">
                <i class="bi bi-inbox fs-1"></i>
                <p class="mt-2">No inbound messages found.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>From</th>
                            <th>Message</th>
                            <th>Received At</th>
                            <th>Channel</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var message in Model)
                        {
                            <tr>
                                <td>@message.Id</td>
                                <td>
                                    @if (message.User != null)
                                    {
                                        <a href="@Url.Action("Details", "Users", new { id = message.User.Id })">
                                            @message.User.Name
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Unknown</span>
                                    }
                                </td>
                                <td>
                                    <div class="text-truncate" style="max-width: 300px;" title="@message.MessageText">
                                        @message.MessageText
                                    </div>
                                </td>
                                <td>@message.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                <td>
                                    <span class="badge bg-success">@message.Channel</span>
                                </td>
                                <td>
                                    <a href="@Url.Action("Details", "Dashboard", new { id = message.Id })" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                    <a href="@Url.Action("MessageLogs", "Logs", new { messageId = message.Id })" class="btn btn-sm btn-outline-info">
                                        <i class="bi bi-journal-text"></i> Logs
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
